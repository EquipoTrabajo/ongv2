<% include header %>
  <% include nav %>
  <div class="container body">
    <div class="main_container">
    <div class="clearfix"></div>
      <h1>Hello, there</h1>
    </div>
  </div>

<div class="col-md-6 col-sm-6 col-xs-12">
  <div class="x_panel">
    <div class="x_title">
      <h2><i class="fa fa-bars"></i> Campañas <small></small></h2>
      <ul class="nav navbar-right panel_toolbox">
        <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
        </li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
          <ul class="dropdown-menu" role="menu">
            <li><a href="#">Settings 1</a>
            </li>
            <li><a href="#">Settings 2</a>
            </li>
          </ul>
        </li>
        <li><a class="close-link"><i class="fa fa-close"></i></a>
        </li>
      </ul>
      <div class="clearfix"></div>
    </div>
    <div class="x_content">


      <div class="" role="tabpanel" data-example-id="togglable-tabs">
        <ul id="myTab" class="nav nav-tabs bar_tabs" role="tablist">
          <li role="presentation" class="active"><a href="#tab_content1" id="home-tab" role="tab" data-toggle="tab" aria-expanded="true">Todas</a>
          </li>
          <li role="presentation" class=""><a href="#tab_content2" role="tab" id="profile-tab" data-toggle="tab" aria-expanded="false">Recomendadas</a>
          </li>
          <li role="presentation" class=""><a href="#tab_content3" role="tab" id="profile-tab2" data-toggle="tab" aria-expanded="false">Cercanas</a>
          </li>
        </ul>
        <div id="myTabContent" class="tab-content">
          <div role="tabpanel" class="tab-pane fade active in" id="tab_content1" aria-labelledby="home-tab">
            <div class="x_content">

              <table class="table table-bordered">
                <thead>
                  <tr>
                    <th>Nombre</th>
                    <th>Fecha Inicio</th>
                    <th>Fecha Fin</th>
                    <th>Categoría</th>
                  </tr>
                </thead>
                <tbody>
                  <% for(var i=0; i< allCampaigns.length; i++) { %>
                    <tr>
                      <th scope="row"><a href="/campaigns/<%= allCampaigns[i]._id %>"><%= allCampaigns[i].name %></a></th>
                      <td><%= allCampaigns[i].start_date %></td>
                      <td><%= allCampaigns[i].end_date %></td>
                      <td><%= allCampaigns[i].category %></td>
                    </tr>
                  <% } %>
                </tbody>
              </table>

            </div>
          </div>
          <div role="tabpanel" class="tab-pane fade" id="tab_content2" aria-labelledby="profile-tab">
            <div class="x_content">

              <table class="table table-bordered">
                <thead>
                  <tr>
                    <th>Nombre</th>
                    <th>Fecha Inicio</th>
                    <th>Fecha Fin</th>
                    <th>Categoría</th>
                  </tr>
                </thead>
                <tbody>
                  <% for(var i=0; i< recommendedCampaigns.length; i++) { %>
                    <tr>
                      <th scope="row"><a href="/campaigns/<%= recommendedCampaigns[i]._id %>"><%= recommendedCampaigns[i].name %></a></th>
                      <td><%= recommendedCampaigns[i].start_date %></td>
                      <td><%= recommendedCampaigns[i].end_date %></td>
                      <td><%= recommendedCampaigns[i].category %></td>
                    </tr>
                  <% } %>
                </tbody>
              </table>

            </div>
          </div>
          <div role="tabpanel" class="tab-pane fade" id="tab_content3" aria-labelledby="profile-tab">
            <div class="x_content">

              <table class="table table-bordered">
                <thead>
                  <tr>
                    <th>Nombre</th>
                    <th>Fecha Inicio</th>
                    <th>Fecha Fin</th>
                    <th>Categoría</th>
                  </tr>
                </thead>
                <tbody>
                <% if (false) {%>
                  <% for(var i=0; i< profile.nearbyCampaigns.length; i++) { %>
                    <tr>
                      <th scope="row"><a href="/campaigns/<%= profile.nearbyCampaigns[i]._id %>"><%= profile.nearbyCampaigns[i].name %></a></th>
                      <td><%= profile.nearbyCampaigns[i].start_date %></td>
                      <td><%= profile.nearbyCampaigns[i].end_date %></td>
                      <td><%= profile.nearbyCampaigns[i].category %></td>
                    </tr>
                  <% } %>
                <% } %>
                </tbody>
              </table>

            </div>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>

<% include footer %>